##################################################################
# DuiDefinesFeature
#
# Global DirectUI definitions
######################################################################

DUI_MAJOR_VERSION = 0
DUI_MINOR_VERSION = 20
DUI_PATCH_VERSION = 0
DUI_VERSION=$${DUI_MAJOR_VERSION}.$${DUI_MINOR_VERSION}.$${DUI_PATCH_VERSION}

# first set default value for dui prefix
# the @@...@@ variable is filled from the libdui/configure script.
unix {
    DUI_PREFIX = @@DUI_UNIX_INSTALL_PREFIX@@
    DUI_SYSCONFDIR = @@DUI_UNIX_INSTALL_SYSCONFDIR@@
    DUI_LIBDIR = @@DUI_UNIX_INSTALL_LIBDIR@@
}

mac {
    DUI_PREFIX = @@DUI_UNIX_INSTALL_PREFIX@@
    DUI_SYSCONFDIR = @@DUI_UNIX_INSTALL_SYSCONFDIR@@
    DUI_LIBDIR = @@DUI_UNIX_INSTALL_LIBDIR@@
}

win32 {
    DUI_PREFIX = /
}

# Directories
unix|win32 {
    DUI_INSTALL_BIN = $$DUI_PREFIX/bin
    DUI_INSTALL_LIBS = $$DUI_LIBDIR
    DUI_INSTALL_DATA = $$DUI_PREFIX/share
    DUI_INSTALL_HEADERS = $$DUI_PREFIX/include/dui
    DUI_INSTALL_SYSCONF = $$DUI_SYSCONFDIR
    DUI_INSTALL_XSESSION = $$DUI_INSTALL_SYSCONF/X11
    DUI_INSTALL_LOCALSTATE = /var

    DUI_THEME_DIR = $$DUI_INSTALL_DATA/themes
    DUI_THEME_PRELOAD_DIR = $$DUI_INSTALL_LOCALSTATE/lib/dui/theme/preload.d
    DUI_THEME_POST_PRELOAD_DIR = $$DUI_INSTALL_LOCALSTATE/lib/dui/theme/preload.post

    DUI_APPLET_DIR = $$DUI_LIBDIR/dui/applets
    DUI_APPLET_INSTALLATION_SOURCES_DIR = $$DUI_LIBDIR/dui/appletinstallationsources
    DUI_APPLET_DATA_DIR = $$DUI_INSTALL_DATA/dui/applets
    DUI_APPLET_SETTINGS_DIR = $$DUI_INSTALL_DATA/dui/applets/settings

    DUI_APPLICATION_EXTENSION_DIR = $$DUI_LIBDIR/dui/applicationextensions
    DUI_APPLICATION_EXTENSION_DATA_DIR = $$DUI_INSTALL_DATA/dui/applicationextensions

    DUI_NOTIFICATIONS_EVENT_TYPES_DIR=$$DUI_INSTALL_DATA/dui/notifications/eventtypes
    DUI_XDG_DIR = $$DUI_INSTALL_SYSCONF/xdg
    DUI_TRANSLATION_DIR = $$DUI_INSTALL_DATA/l10n/dui
    DUI_DBUS_INTERFACES_DIR = /usr/share/dbus-1/interfaces
    DUI_DBUS_SERVICES_DIR = $$system(pkg-config --variable session_bus_services_dir dbus-1)

    DUI_SHADER_SOURCE_DIR = $$DUI_INSTALL_DATA/dui/shaders
    DUI_SHADER_BINARY_DIR = $$DUI_INSTALL_LOCALSTATE/cache/dui/shaders
}

mac {
    DUI_INSTALL_BIN = $$DUI_PREFIX/bin
    DUI_INSTALL_LIBS = $$DUI_LIBDIR
    DUI_INSTALL_DATA = $$DUI_PREFIX/share
    DUI_INSTALL_HEADERS = $$DUI_PREFIX/include/dui
    DUI_INSTALL_SYSCONF = $$DUI_SYSCONFDIR
    DUI_INSTALL_LOCALSTATE = /var

    DUI_THEME_DIR = $$DUI_INSTALL_DATA/themes

    DUI_APPLET_DIR = $$DUI_LIBDIR/dui/applets
    DUI_APPLET_INSTALLATION_SOURCES_DIR = $$DUI_LIBDIR/dui/appletinstallationsources
    DUI_APPLET_DATA_DIR = $$DUI_INSTALL_DATA/dui/applets
    DUI_APPLET_SETTINGS_DIR = $$DUI_INSTALL_DATA/dui/applets/settings

    DUI_NOTIFICATIONS_EVENT_TYPES_DIR=$$DUI_INSTALL_DATA/dui/notifications/eventtypes
    DUI_XDG_DIR = $$DUI_INSTALL_SYSCONF/xdg
    DUI_TRANSLATION_DIR = $$DUI_INSTALL_DATA/l10n/dui
    DUI_DBUS_INTERFACES_DIR = $$DUI_INSTALL_DATA/dbus-1/interfaces
    DUI_DBUS_SERVICES_DIR = $$DUI_INSTALL_DATA/dbus-1/services

    DUI_SHADER_SOURCE_DIR = $$DUI_INSTALL_DATA/dui/shaders
    DUI_SHADER_BINARY_DIR = $$DUI_INSTALL_LOCALSTATE/cache/dui/shaders
}

win32 {
    # only override defines, that are different from the unix ones above here...

    DUI_INSTALL_LIBS = $$DUI_PREFIX/bin
    DUI_INSTALL_SYSCONF = $$DUI_PREFIX/etc
    DUI_INSTALL_XSESSION = $$DUI_INSTALL_SYSCONF/X11
    DUI_INSTALL_LOCALSTATE = $$DUI_PREFIX/var

    DUI_THEME_PRELOAD_DIR = $$DUI_INSTALL_LOCALSTATE/lib/dui/theme/preload.d
    DUI_THEME_POST_PRELOAD_DIR = $$DUI_INSTALL_LOCALSTATE/lib/dui/theme/preload.post

    DUI_XDG_DIR = $$DUI_INSTALL_SYSCONF/xdg
    DUI_DBUS_INTERFACES_DIR = /usr/share/dbus-1/interfaces
    DUI_DBUS_SERVICES_DIR = $$DUI_INSTALL_DATA/dbus-1/services
}
