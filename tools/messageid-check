  color:#FF0000;
}
.okbgcolor {
  background-color:#ceeebc;
}
.errorbgcolor {
  background-color:#ffcdcd;
}
.eefile {
  border: solid 1px #88c3ff;
  margin-bottom: 10px;
}
.title {
  background-color: #5a9fe5;
  font-weight: bold;
  padding: 5px;
  padding-left: 15px;
  font-size: 20px;
}
